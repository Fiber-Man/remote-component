{
  "name": "@paciolan/remote-component",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "author": "Paciolan",
  "license": "",
  "repository": {
    "type": "git",
    "url": "git@gitlabdev.paciolan.info:development/library/javascript/remote-component.git"
  },
  "scripts": {
    "build": "babel src --out-dir dist --ignore 'src/**/*.test.js' --source-maps",
    "clean": "rimraf coverage dist",
    "cz": "git-cz",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "test:changed": "npm run test -- --changedSince HEAD",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint .",
    "watch": "npm run build -- --watch"
  },
  "dependencies": {
    "@paciolan/remote-module-loader": "^2.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-polyfill": "^6.26.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "git-cz": "^2.0.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "rimraf": "^2.6.3"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint && npm run test:changed",
      "pre-push": "npm run build && npm run test:coverage"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/git-cz"
    }
  }
}
